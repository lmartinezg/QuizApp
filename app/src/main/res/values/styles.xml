<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap.MainLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/main_layout_padding</item>
    </style>

    <style name="BackgroundPicture">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="MatchWrap.QuestionLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/question_layout_margin_bottom</item>
    </style>

    <style name="MatchWrap.QuestionTextView">
        <item name="android:textSize">@dimen/question_textView_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MatchWrap.Focusable">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_left</item>
        <item name="android:layout_marginRight">@dimen/button_margin_right</item>
    </style>

</resources>
